.screen_toggle.a.data-tourism.all-active
    .grid.grid-tourism
        p 线上热搜词排名 (TOP 10)
        table(width="100%")#js-travel-hotkey-screen-a
          script#js-tpl-travel-hotkey-screen-a(type='text/html')
            tr.row
              th(width="12%") 排名
              th(width="43%") 热词名称
              | {{each item as value i}}
              |  <tr class="row">
              |    <td width="12%">{{i+1}}</td>
              |    <td width="43%">{{value}}</td>
              |  </tr>
              |      {{/each}}

    .grid.grid-tourism
        p 出行热门旅游地 (TOP 10)
        table(width="100%")#js-travel-hotTravel-screen-a
          script#js-tpl-travel-hotTravel-screen-a(type='text/html')
            tr.row
                th(width="12%") 排名
                th(width="43%") 热词地点
            | {{each item as value i}}
            |  <tr class="row">
            |    <td width="12%">{{i+1}}</td>
            |    <td width="43%">{{value}}</td>
            |  </tr>
            |      {{/each}}
